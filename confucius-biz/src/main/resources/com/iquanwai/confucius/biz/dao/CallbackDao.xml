<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iquanwai.confucius.biz.dao.CallbackDao">
    <sql id="Base_Column_List">
        State,CallbackUrl,AccessToken,RefreshToken,Openid,AddTime,UpdateTime
    </sql>

    <insert id="insert" parameterType="Account">
        INSERT INTO `Callback`(
        <include refid="Base_Column_List"/>
        )
        VALUES
        (
        #{callback.state},
        #{callback.callbackUrl},
        #{callback.accessToken},
        #{callback.refreshToken},
        #{callback.openid},
        now(),
        now()
        )

    </insert>

    <select id="queryByState" resultType="Callback">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        Callback
        WHERE
        `State` = #{state}
    </select>

    <select id="queryByAccessToken" resultType="Callback">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        Callback
        WHERE
        `AccessToken` = #{accessToken}
    </select>

    <update id="updateUserInfo">
        UPDATE Callback
        SET
        `AccessToken`= #{accessToken},
        `RefreshToken`= #{refreshToken},
        `Openid`= #{openid}
        WHERE
        `State` = #{state}
    </update>

    <update id="refreshToken">
        UPDATE Callback
        SET
        `AccessToken`= #{accessToken}
        WHERE
        `State` = #{state}
    </update>
</mapper>

