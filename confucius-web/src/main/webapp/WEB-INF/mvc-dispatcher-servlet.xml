<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:websocket="http://www.springframework.org/schema/websocket"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/aop
	                       http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
                           http://www.springframework.org/schema/websocket
                           http://www.springframework.org/schema/websocket/spring-websocket.xsd">
    <aop:aspectj-autoproxy proxy-target-class="true"/>
    <context:annotation-config/>
    <context:component-scan base-package="com.iquanwai.confucius.web" />
    <mvc:resources location="/image/" mapping="/image/**"/>
    <mvc:resources location="/js/" mapping="/js/**"/>

    <mvc:annotation-driven>
        <mvc:message-converters register-defaults="false">
            <!-- 避免IE执行AJAX时,返回JSON出现下载文件 -->
            <bean id="fastJsonHttpMessageConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/html;charset=UTF-8</value>
                        <value>application/json;charset=UTF-8</value>
                    </list>
                </property>
            </bean>
            <bean id="jaxbHttpMessageConverter" class="org.springframework.http.converter.xml.Jaxb2RootElementHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>text/xml;charset=UTF-8</value>
                        <value>application/xml;charset=UTF-8</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
        <mvc:argument-resolvers>
            <bean class="com.iquanwai.confucius.web.resolver.LoginUserResolver"/>
            <bean class="com.iquanwai.confucius.web.resolver.PCLoginUserResolver"/>
        </mvc:argument-resolvers>
    </mvc:annotation-driven>

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"/>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/" p:suffix=".jsp" p:order="1"/>

    <websocket:handlers allowed-origins="*">
        <websocket:mapping path="/session" handler="sessionHandler"/>
        <websocket:handshake-interceptors>
            <bean class="org.springframework.web.socket.server.support.HttpSessionHandshakeInterceptor"/>
        </websocket:handshake-interceptors>
    </websocket:handlers>
    <bean id="sessionHandler" class="com.iquanwai.confucius.web.account.websocket.SessionSocketHandler"/>


    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**" />
            <mvc:exclude-mapping path="/wx/**" />
            <mvc:exclude-mapping path="/b/**" />
            <mvc:exclude-mapping path="/image/**" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/homework/**" />
            <mvc:exclude-mapping path="/share/**" />
            <mvc:exclude-mapping path="/static/**" />
            <mvc:exclude-mapping path="/cache/**" />
            <mvc:exclude-mapping path="/file/image/**" />
            <mvc:exclude-mapping path="/account/login/**"/>
            <mvc:exclude-mapping path="/account/get"/>
            <mvc:exclude-mapping path="/session/**"/>
            <mvc:exclude-mapping path="/login" />
            <mvc:exclude-mapping path="/pc/**"/>
            <mvc:exclude-mapping path="/home/**" />
            <mvc:exclude-mapping path="/fragment/**"/>
            <mvc:exclude-mapping path="/servercode"/>
            <mvc:exclude-mapping path="/community"/>
            <mvc:exclude-mapping path="/rise"/>
            <bean class="com.iquanwai.confucius.web.interceptor.CourseHandlerInterceptor"></bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/pc/**"/>
            <mvc:mapping path="/account/get"/>
            <!--<mvc:mapping path="/image/upload/**"/>-->
            <mvc:exclude-mapping path="/pc/static/**"/>
            <mvc:exclude-mapping path="/pc/fragment/problem/list"/>
            <mvc:exclude-mapping path="/pc/survey/wjx"/>
            <bean class="com.iquanwai.confucius.web.interceptor.PCAjaxHandlerInterceptor">
                <constructor-arg ref="permissionServiceImpl"/>
            </bean>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/fragment/**"/>
            <mvc:mapping path="/community"/>
            <mvc:mapping path="/rise"/>
            <mvc:mapping path="/pc/survey/wjx"/>
            <bean class="com.iquanwai.confucius.web.interceptor.PCHandlerInterceptor">
                <constructor-arg ref="permissionServiceImpl"/>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>